##############
# Workspaces #
##############

# Workspace Names
set $wsHome    ^`^u
# f015
set $wsSteam    ^f
# f1b6
set $wsMedia    ^`^a
# f001
set $wsCarla    ^b
# f0a0
set $wsStreamEmacs    ^d
# f121
set $wsStreamBrowser    ^w
# f5fc
set $wsStreamAtom    ^w^r
# f5d2
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8

# Assign certain Workspaces to specific Montiors
workspace $ws2 output DP-0
workspace $ws1 output HDMI-1
workspace $ws3 output DP-2
# workspace $wsSteam output DP-0
workspace $ws3 output DVI-D-0
#workspace $wsStreamEmacs output DP-0
#workspace $wsStreamBrowser output DP-0
#workspace $wsStreamAtom output DP-0

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+u workspace $wsHome
bindsym $mod+i workspace $wsSteam
bindsym $mod+o workspace $wsMedia
bindsym $mod+p workspace $wsCarla
bindsym $mod+m workspace $wsStreamEmacs
bindsym $mod+n workspace $wsStreamBrowser
bindsym $mod+b workspace $wsStreamAtom

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+u move container to workspace $wsHome; workspace $wsHome
bindsym $mod+Shift+i move container to workspace $wsSteam; workspace $wsSteam
bindsym $mod+Shift+o move container to workspace $wsMedia; workspace $wsMedia
bindsym $mod+Shift+p move container to workspace $wsCarla; workspace $wsCarla
bindsym $mod+Shift+m move container to workspace $wsStreamEmacs; workspace $wsStreamEmacs
bindsym $mod+Shift+n move container to workspace $wsStreamBrowser; workspace $wsStreamBrowser
bindsym $mod+Shift+b move container to workspace $wsStreamAtom; workspace $wsStreamAtom

